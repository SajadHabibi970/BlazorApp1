@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>
<h1>Counter</h1>

<p role="status">Current count: @currentCount</p> 

<div>
    <button class="btn @(currentCount > 0 ? "btn-success" : "btn-primary")" @onclick="IncrementCount">+1</button>
    <button class="btn @(currentCount == 0 ? "btn-warning" : "btn-secondary")" @onclick="ResetCount">Reset to 0</button>
    <button class="btn @(currentCount < 0 ? "btn-danger" : "btn-primary")" @onclick="DecrementCount">-1</button>
</div>

@code
{
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }
}
